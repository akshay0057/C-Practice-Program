#include<iostream>
using namespace std;
int main()
{
	char str[35]; 
	int i, countVowel = 0;
	cout << "Enter a string : ";
	cin.get(str, 35);
	for(i=0; str[i]!='\0'; i++)
	{
		if(str[i] == 'a' || str[i] == 'e' || str[i] == 'i' || str[i] == 'o' || str[i] == 'u' || str[i] == 'A' || str[i] == 'E' || str[i] == 'I' || str[i] == 'O' || str[i] == 'U')
		{
			countVowel++;
		}
		
	}
	cout << "The Number of vowels are : " << countVowel;
	return 0;
}
